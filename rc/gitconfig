[core]
  excludesfile = ~/.dotfiles/config/global_gitignore
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  autocrlf = input
[alias]
  co = checkout
  st = status
  ci = commit
  up = pull
  br = branch
  df = diff
  lg = log -p
  aa = add --all
  staged = diff --cached
  unstage = reset HEAD
  new = ls-files --others --exclude-standard
  added = diff --cached --name-only
  today = log --stat --since='1 Day Ago' --graph --pretty=oneline --abbrev-commit --date=relative
  plre = pull --rebase
  ff = merge --ff-only
  newauthor = commit --amend --reset-author -C HEAD
  l = !source ~/.dotfiles/script/githelpers && pretty_git_log
  la = !git l --all
  hp = "!source ~/.dotfiles/script/githelpers && show_git_head"
  wtf = "!git commit -m \"$(curl -s whatthecommit.com/index.txt)\""
  scoreboard = "!git log | grep '^Author' | sort | uniq -ci | sort -r"
  ready = rebase -i @{u}
  last = log @{1}.. --stat -C --no-merges
  diffdir = difftool -y -d --no-symlinks
  lo = log --oneline --graph
  mr = !sh -c 'git fetch ${2:-origin} merge-requests/$1/head:mr-${2:-origin}-$1 && git checkout mr-${2:-origin}-$1' -
[color]
  ui = true
  diff = auto
  status = auto
  branch = auto
[diff]
  renames = copies
  tool = bc3
[diff "ruby"]
  funcname = ^ *\\(\\(class\\|module\\|def\\) .*\\)
[push]
  default = upstream
[pull]
  rebase = true
[branch]
  autosetuprebase = always
[http]
	postBuffer = 100m
[url "git://github.com/"]
  # Read-only
  insteadOf = gh:
[url "git@github.com:"]
  # With write access
  insteadOf = wgh:
[url "git@heroku.com:"]
  insteadOf = heroku:
[credential]
  helper = osxkeychain
[merge]
  tool = bc3
[mergetool]
  bc3 = trustExitCode
  keepBackup = false
[pager]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less
[rerere]
	enabled = true
[init]
	templatedir = ~/.dotfiles/git_templates
